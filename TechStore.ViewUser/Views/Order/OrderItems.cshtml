@{
    var lan = "en";
    if (CultureInfo.CurrentCulture.TextInfo.CultureName.StartsWith("ar"))
    {
        lan = "ar";
    }
}

@model ResultDataList<GetAllOrderItemDto>

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/OrderItems.css">
</head>

<body>
    <div class="container containerr my-5">
        <div class="row mx-4">
            @foreach (var order in Model.Entities)
            {
                <div class="col-md-12">
                    <div class="order-details">
                        <div class="row" dir="auto">
                            <div class="Order-details-image col-md-4">
                                <img class="product-image-photo" data-src="@order.Image" height="50" alt="" src="@order.Image">
                            </div>

                            <div class="Order-details-content col-md-8">
                                @if (lan == "ar")
                                {
                                    <p class="mt-2 Desc">@order.Ar_Description</p>

                                }
                                else
                                {
                                    <p class="mt-2 Desc">@order.Description</p>

                                }
                                <p><span>@Localizer["Price"] :</span> @order.Price EGP</p>
                                <p class="Quant"><span>@Localizer["Quantity"] :</span> @order.Quantity </p>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</body>
