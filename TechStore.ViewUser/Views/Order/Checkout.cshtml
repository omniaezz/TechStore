@{
    var address = ViewBag.Address;
    var phone = ViewBag.Phone;
    var userId = ViewBag.UserId;

}

<html>
    <head>

        <style>
            .row-edit{
                padding:50px;
            }
            .Details{
                border:1px Gray solid;
                padding:50px;
                border-radius:5px;
            }
            .summary{
                padding:40px;
                background-color:;
                border-radius:5px;
            }
            .paypal{
                width:80%;
                height:80%;
            }

            .btn{
                margin-top:20px;
            }

            .summary-details{
                margin-top:20px;
            }
           
        </style>
    </head>
    <body>
        <div class="container">
            <div class="row row-edit">
            <form>
                <div class="col-md-6 Details">
                    <h1>Delivery Details</h1>
                    
                        <div class="form-group">
                            <input type="hidden" class="form-control" id="InputAddress" value="@userId" name="userId" >
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Address</label>
                        <input type="text" class="form-control" id="InputAddress" value="@address" name="ShippingAddress" placeholder="Enter Address">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Phone</label>
                        <input type="text" class="form-control" id="eInputPhone" value="@phone" name="Phone" placeholder="Enter Phone">
                        </div>
                        <button hidden type="submit" class="btn btn-dark">Submit</button>
                </div>

                <div class="col-md-1">
                </div>

                <div class="col-md-5 summary">

                    <h2>Order Summary</h2>
                    <div class="row summary-details">
                        <div class="col-md-6">
                            <p>Quantity <span>@Model.Count</span></p>
                        @* <p>Total Price<span>@Model.Sum(item => item.Quantity * item.Price)</span></p> *@
                            <p>Quantity</p>
                            <p>Total Price</p>
                        </div>

                        <div class="col-md-6">
                            <p></p>
                            <p></p>
                        </div>
                    </div>
                    <div class="row">
                    <a asp-action="CheckOut" asp-controller="Payment" class="btn btn-dark">Pay Now</a>
                    </div>
                </div>
            </form>

            </div>
        </div>
    </body>
</html>