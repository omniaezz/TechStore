@model TechStore.Dtos.AccountDtos.LoginDto

@{
    ViewData["Title"] = "Login";
    Layout = null;
    

}


<html>
    <head>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css">
        <link rel="stylesheet" href="/css/login.css">
    </head>
    <body>
    <div dir="auto" class="navbar-top container ">
        <div class="row">
            <div class="imag- col-9">
                <img src="/imag-slide/tech-02.png" alt="" width="200">

            </div>

        </div>

    </div>

    <div class="">
        <i class="arrow_carrot-down" style="font-size: 0.8rem; margin-right: 5px;">
            <partial name="_selectLanguage" />
        </i>
    </div>

    <div dir="auto" class="container">
        <div class="Formm">
            
            <form id="login-form" class="form p-5" asp-action="Login" asp-controller="Account" method="post">
                <div class="text-center">
                    <img src="/imag-slide/image.png" class="w-25" alt="">
                </div>
                
                @* <h2>@Localizer["Let'sgetstarted!"]</h2> *@
                <div class="form-group">
                    <label dir="auto" class="control-label">@Localizer["UserName"]</label>
                    <input asp-for="UserName" class="form-control w-100" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label dir="auto" class="control-label">@Localizer["Password"]</label>
                    <input asp-for="Password" type="password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group text-center">
                    <input dir="auto" class="SubmitBtn mt-3" type="submit" value="@Localizer["login"]" />
                </div>
                <p class="register">@Localizer["Don'thaveanaccount?"] <a asp-action="Register" asp-controller="Account">@Localizer["Registerhere"]</a></p>
            </form>
        </div>


    </div>
    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
    </body>
</html>






