@{
}
@model UpdateUserDTO
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Responsive Design</title>
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <!-- Font Awesome CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer">
    <style>
  #list {
    margin-top: 15px;
    border: 1px solid #f0f0f0; 
    border-radius: 10px;
    background-color: #ffffff; 
    padding: 20px;
    width: 100%;
}

.list-group a {
    padding: 15px;
}

.list-group {
    margin-top: 25px;
    width: 100%;
    box-sizing: border-box;
}
 .part h6,i{
   padding: 3px;
    display: inline;
}
#content {
 
    padding: 15px;
}

#x {
    margin-top: 10px;
    background-color: #ffffff; 
    border: 1px solid #f0f0f0; 
    border-radius: 10px;
    padding: 15px;
}
#x h2{
    display: inline;
}

        .image-social {
    width: 25%;
}

     span{
      font-weight:bold;
      font-size:0.7rem;  
        }

        .log_out{
            color:dodgerblue;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row col-12"  dir="auto">
            <!-- Side Panel -->
            <div id="side" class="col-md-4"> 
                <div class="list-group">
                    <a href="Accounthome" class="list-group-item list-group-item-action" target="_self">
                        <i class="far fa-user-circle"></i>
                        <span>@Localizer["Account Home"]</span>
                    </a>
                  
                    <a asp-action="UpdateAccount"  class="list-group-item list-group-item-action">
                        <i class="far fa-smile"></i>
                        <span>@Localizer["update Profile"]</span>
                    </a>
                    <a asp-controller="Order" asp-action="GetAllOrders" class="list-group-item list-group-item-action" target="_self">
                        <i class="fas fa-box"></i>
                        <span>@Localizer["Order History"]</span>
                    </a>
                    <a asp-action="Logout" class="list-group-item list-group-item-action log_out">@Localizer["Log out"]</a>
                </div>
                <div id="list">
                    <div class="part" >
                        <i class="fa-solid fa-arrows-rotate"></i>
                         <h6>Return policy</h6>
                        <p>Most items can be returned within 30 days of delivery</p>
                    </div>
                    <div class="part">
                        <i class="fa-regular fa-circle-question"></i>
                        <h6>Have a question?</h6>
                      
                        <p>19966</p>
                    </div>
                </div>
                <div id="list">
                    <h6>Use our app</h6>
                    <p>Enjoy benefits & features use B.TECH app</p>
                     <div class="img">
                        <img class="image-social" src="~/image-social-media/Google.webp">
                        <img class="image-social" src="~/image-social-media/IOS.webp">
                </div> 
                </div>
                    
                     
                       
                      
                       
                  
                </div>
            
            <!-- Main Content -->
            <div id="content" class="col-md-8">
                <div id="x">
                    <h2>@Localizer["Hello"],</h2>
                    <h2>@Model.FirstName @Model.LastName</h2>
                    <p>@Model.PhoneNumber</p>
                </div>
            </div>
        </div>
    </div>
    <!-- Bootstrap 5 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
