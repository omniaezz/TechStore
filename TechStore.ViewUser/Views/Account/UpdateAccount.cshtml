@model UpdateUserDTO

@{
    ViewData["Title"] = "UpdateAccount";
}

   
<html>
    <head>
       <link rel="stylesheet" href="~/css/UpdateAccount.css">
    </head>

    <body>
    <div class="container">
        <div class="form-container">
            <div class="row">
                <h2 class="text-center py-3">@Localizer["UpdateAccount"]</h2>
                <form asp-action="UpdateAccount" asp-controller="Account" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group" hidden>
                                <label asp-for="Id" class="control-label text-black"></label>
                                <input asp-for="Id" class="form-control" />
                            </div>

                            <div class="form-group">
                                <label dir="auto" class="control-label">@Localizer["FirstName"]</label>
                                <input asp-for="FirstName" class="form-control" value="@Model.FirstName" />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label dir="auto" class="control-label">@Localizer["LastName"]</label>
                                <input asp-for="LastName" class="form-control" value="@Model.LastName" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label dir="auto" class="control-label">@Localizer["UserName"]</label>
                                <input asp-for="UserName" class="form-control" value="@Model.UserName" />
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>



                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label dir="auto" class="control-label">@Localizer["PhoneNumber"]</label>
                                <input asp-for="PhoneNumber" class="form-control" value="@Model.PhoneNumber" />
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label dir="auto" class="control-label">@Localizer["Email"]</label>
                                <input asp-for="Email" class="form-control" value="@Model.Email" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label dir="auto" class="control-label">@Localizer["Address"]</label>
                                <input asp-for="Address" class="form-control" value="@Model.Address" />
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>

                        </div>

                        <div class="form-group imgg w-50 mx-auto mt-3">
                            @* <label dir="auto" class="control-label">@Localizer["Image"]</label> *@
                            <img class="form-control img-fluid w-5 h-5" src="/ImageUser/@Model.Image" />
                            <input type="file" name="UrlImage" class="form-control" value="@Model.Image" />
                            <span asp-validation-for="UrlImage" class="text-danger"></span>
                        </div>

                        <div class="subBtn text-center">
                            <button type="submit" class="btn btn-dark">@Localizer["Update"]</button>
                        </div>
                    </div>



                </form>
            </div>
        </div>

    </div>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
    </body>
</html>




